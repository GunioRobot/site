!!! XML
!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", :lan => "en"}
  %head
    %meta{:name => "description", :content => "LA Ruby Conference - Los Angeles area technology conference for Rubyists"}
    %title
      Los Angeles Ruby Conference 2010 | larubyconf.com
    =stylesheet_link_tag "main"
    =stylesheet_link_tag "user"
    =stylesheet_link_tag "feedback"

    =javascript_include_tag :defaults

  %body
    #container
      =render :partial => 'shared/header'
      #main
        #singlecol
          -unless flash.empty?
            %ul#flash
              -flash.keys.each do |k|
                %li{:class => k}
                  =h flash[k]
            -javascript_tag do
              setTimeout("new Effect.Fade('flash');", 10000)
          =yield
        .clear
      =render :partial => 'shared/footer'

=render :partial => 'shared/google_analytics'
=render :partial => 'shared/get_clicky'