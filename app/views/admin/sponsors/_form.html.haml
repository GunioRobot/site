-form_for [:admin, @sponsor], :html => { :multipart => true } do |f|
  .form-field.required
    %label{:for => 'sponsor_company_name'}
      Company Name:
    =f.text_field :company_name

  .form-field.required
    %label{:for => 'sponsor_level'}
      Level:
    =f.select :sponsor_level, Sponsor::SPONSOR_LEVELS

  .form-field.required
    %label{:for => 'sponsor_url'}
      URL:
    =f.text_field :url

  .form-field
    %label{:for => 'sponsor_logo'}
      Logo:
    =f.file_field :logo
    %br
    =image_tag(@sponsor.logo.url) unless @sponsor.logo_file_name.nil?
  .form-field
    %label{:for => 'sponsor_page_logo'}
      Page Logo:
    =f.file_field :page_logo
    %br
    =image_tag(@sponsor.page_logo.url) unless @sponsor.page_logo_file_name.nil?
  .form-field
    %label{:for => 'sponsor_blurb'}
      Blurb:
    =f.text_area :blurb, :size => '60x5'
  .form-field
    %label
      &nbsp;
    =f.check_box :logo_display
    Display Logo on Sponsor Page
  =submit_tag "Save"